<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foodieapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/light_orange</item>



        <item name="android:textColor">@color/black</item>



        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/magenta</item>
        <item name="colorSecondaryVariant">@color/peach</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_fonts_family</item>
    </style>

<!--Changing date button specifically to match the primary text color -->
    <style name="dateText" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="customFabBtn" parent="Widget.MaterialComponents.ExtendedFloatingActionButton.Icon">
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/orange</item>
    </style>

    <style name="customTextBtn" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/orange</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="customOutlineBtn" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="iconTint">@color/orange</item>
        <item name="android:textColor">@color/orange</item>
    </style>

    <style name="customFilledBtn" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/orange</item>
        <item name="android:textColor">@color/white</item>
    </style>



    <style name="Theme.Foodieapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Foodieapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Foodieapp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>